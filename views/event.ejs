<link rel="stylesheet" href="/css/event.css">

<main class="event-page">
    <section class="event-hero">
        <div class="event-media">
            <% if (event.event_image) { %>
                <img src="/uploads/<%= event.event_image %>" alt="<%= event.event_name %>">
            <% } else { %>
                <div class="event-placeholder">No Image</div>
            <% } %>
        </div>

        <div class="event-info">
            <h1 class="event-title"><%= event.event_name %></h1>

            <div class="event-meta">
                <div class="meta-item"><strong>Date:</strong> <%= event.event_date %></div>
                <div class="meta-item"><strong>Time:</strong> <%= event.event_start_time %> - <%= event.event_end_time %></div>
                <div class="meta-item"><strong>Location:</strong> <%= event.event_location %></div>
                <div class="meta-item"><strong>Type:</strong> <%= event.event_type %></div>
                <div class="meta-item price"><strong>Price:</strong> <%= event.event_price ? ("Rs " + event.event_price) : "Free" %></div>
            </div>

            <div class="event-actions">
                <button class="join-btn">Join Event</button>
            </div>
        </div>
    </section>

    <section class="event-description">
        <h2>About this Event</h2>
        <p><%= event.event_description %></p>
    </section>
</main>