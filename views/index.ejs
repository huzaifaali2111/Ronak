<link rel="stylesheet" href="css/index.css">
<body>

    <section class="hero-minimal">
        <div class="container">
            <h1>Elevating Experiences</h1>
            <p>The heartbeat of Pakistan's most vibrant events. Find your next scene today.</p>
        </div>
    </section>

    <section class="controls-section">
        <div class="container">
            
            <div class="date-header">Select Date</div>
            <div class="calendar-strip">
                <div class="calendar-day active">
                    <span class="day-name">Mon</span>
                    <span class="day-number">10</span>
                </div>
                <div class="calendar-day">
                    <span class="day-name">Tue</span>
                    <span class="day-number">11</span>
                </div>
                <div class="calendar-day">
                    <span class="day-name">Wed</span>
                    <span class="day-number">12</span>
                </div>
                <div class="calendar-day">
                    <span class="day-name">Thu</span>
                    <span class="day-number">13</span>
                </div>
                <div class="calendar-day">
                    <span class="day-name">Fri</span>
                    <span class="day-number">14</span>
                </div>
                <div class="calendar-day">
                    <span class="day-name">Sat</span>
                    <span class="day-number">15</span>
                </div>
                <div class="calendar-day">
                    <span class="day-name">Sun</span>
                    <span class="day-number">16</span>
                </div>
                <div class="calendar-day">
                    <span class="day-name">Mon</span>
                    <span class="day-number">17</span>
                </div>
            </div>

            <div class="filter-pills">
                <button class="pill active">All Events</button>
                <button class="pill">Tech</button>
                <button class="pill">Music</button>
                <button class="pill">Workshops</button>
                <button class="pill">Startups</button>
            </div>
        </div>
    </section>
    <section class="listings">
        <div class="container">
            <div class="grid-container">
                <% allEvent.forEach(event => { %>
                    <article class="event-card">
                        <div class="card-image">
                            <div class="img-placeholder" style="background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);"></div>
                            <span class="card-badge"><%= event.event_type %></span>
                            <span class="card-price"><%= event.event_price %></span>
                        </div>
                        <div class="card-content">
                            <h3><%= event.event_name %></h3>
                            <div class="card-meta">
                                <span><i class="fas fa-map-marker-alt"></i> NIC, Islamabad</span>
                                <span><i class="far fa-clock"></i> 10:00 AM</span>
                            </div>
                            <button class="join-btn">Join Event</button>
                        </div>
                    </article>
                <% }) %>
            </div>
        </div>
    </section>

</body>
</html>